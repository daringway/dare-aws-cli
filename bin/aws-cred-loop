#!/usr/bin/env bash

# Need to get access to aws-cred
. $(dirname $0)/../etc/dare-aws-cli.rc


if [[ $1 == "--cred" ]]
then
    LOOPON=$( echo $2 | sed -n 's/,/ /g;p' )
    shift
    shift
else
    LOOPON=${AWSLOOPCREDS-$AWSLOOPACCOUNTS}
    LOOPON=${LOOPON-$(aws-cred-list)}
fi

for ACCOUNT in ${LOOPON}
do
    echo "****** $ACCOUNT ******"
    aws-cred $ACCOUNT
    eval $*
done